<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="18dp"
		android:text="No KeePass app"
		android:textAppearance="@style/TextAppearance.AppCompat.Title"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"/>

	<TextView
		android:id="@+id/textView3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textView2"
		android:layout_marginTop="18dp"
		android:layout_marginStart="18dp"
		android:layout_marginEnd="18dp"
		android:text="KeePassNFC requires KeePassDroid or Keepass2Android."
		android:layout_alignParentStart="true"/>

	<Button
		android:id="@+id/bInstallKeepass2Android"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/bInstallKeePassDroid"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="23dp"
		android:text="Install Keepass2Android"/>

	<Button
		android:id="@+id/bInstallKeePassDroid"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textView3"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="53dp"
		android:text="Install KeePassDroid"/>
</RelativeLayout>